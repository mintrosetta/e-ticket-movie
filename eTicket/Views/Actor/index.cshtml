@* defind model *@
@model IEnumerable<Actor>

@* defind view data *@
@{
    ViewData["Title"] = "Actor Page";
}

@* write code *@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName"
                                style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Actor" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a class="btn btn-outline-info" asp-controller="Actor" asp-action="GetById" asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i>
                                Detail
                            </a>
                            <a class="btn btn-outline-danger" asp-controller="Actor" asp-action="DeleteConfirmed" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position: fixed; right: 25px; bottom: 25px;">
    <a asp-controller="Actor" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>
        Add new
    </a>
</div>